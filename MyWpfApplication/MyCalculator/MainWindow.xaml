<Window x:Class="MyCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="firstNumber" HorizontalAlignment="Left" Height="52" Margin="131,28,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" FontSize="25" GotFocus="clearBox_GotFocus"/>
        <TextBox x:Name="secondNumber" HorizontalAlignment="Left" Height="52" Margin="280,29,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" FontSize="25"/>
        <Button x:Name="myButton" Content="Multiplicera" HorizontalAlignment="Left" Height="56" Margin="131,154,0,0" VerticalAlignment="Top" Width="286" FontSize="25" Click="Calc_Click"/>
        <ListBox x:Name="results" HorizontalAlignment="Left" Height="192" Margin="428,31,0,0" VerticalAlignment="Top" Width="208"/>
        <Label x:Name="errorMessage" HorizontalAlignment="Left" Margin="135,98,0,0" VerticalAlignment="Top" Width="271" Height="49" FontSize="25" Cursor="" Visibility="Hidden" Foreground="#FFDB5050" Content="Ange giltigt tal"/>
    </Grid>
</Window>
